                <div class="navbar-header">
                    <button class="pmd-ripple-effect navbar-toggle pmd-navbar-toggle" type="button">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="javascript:void(0);" class="navbar-brand navbar-brand-custome">
                        <img src="~/VmmAssets/images/team_blue_logo.svg" alt="team blue logo"><span class="logo-txt">Project Governance</span>
                    </a>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div id="bs-example-navbar-collapse-1" class="collapse navbar-collapse pmd-navbar-sidebar">
                    <div class="dropdown pmd-dropdown pmd-user-info pull-right">
                        <a href="javascript:void(0);" class="btn-user dropdown-toggle media" data-toggle="dropdown" data-sidebar="true" aria-expanded="false">
                            <div class="media-left">

                                @using (Html.BeginForm("Logout", "VMMAssign", FormMethod.Post))
                                {
    <!-- form goes here -->



                                    <input type="submit" value="" class="logout-icon" />


                                }
                            </div>

                        </a>

                    </div>
                    <ul class="nav navbar-nav">
                        <li>
                            <a class="pmd-ripple-effect" href="@Url.Action("AssignTaskNew1", "VMMAssign")" ;">
                                <i class="material-icons">
                                    add
                                </i> <span>Assign New</span>
                            </a>
                        </li>
                        <li>
                            <a class="pmd-ripple-effect " href="@Url.Action("ShowTransactionDetails", "VMMAssign")" ;">
                                <span>In Progress</span>
                            </a>
                        </li>
                        <li>
                            <a class="pmd-ripple-effect" href="@Url.Action("ViewSummaryReport", "VMMAssign")" ;">
                                <span>Summary</span>
                            </a>
                        </li>
                        <li>
                            <a class="pmd-ripple-effect" href="@Url.Action("ViewDashBoardReport", "VMMAssign")" ;">
                                <span>Detailed Report</span>
                            </a>
                        </li>
                        <li>
                            <a class="pmd-ripple-effect active" href="@Url.Action("AddIE", "IE")" ;">
                                <span>IE</span>
                            </a>
                        </li>
                        <li>
                            <a class="pmd-ripple-effect" href="#" ;">
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a class="pmd-ripple-effect" href="#" ;">
                                <span>Customer Report</span>
                            </a>
                        </li>
                        <li>
                            <a class="pmd-ripple-effect" href="#" ;">
                                <span>Engineer Report</span>
                            </a>
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
            <div class="pmd-sidebar-overlay"></div>
        </nav>
        <!-- Nav menu with user information -->
    </header>
    <div>
        @foreach (System.Data.DataRow dr in ViewBag.IE.Rows)
        {

            using (Html.BeginForm("UpdateIE", "IE", FormMethod.Post, new { @Id = "formid" }))
            {
                @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="form-horizontal top-m">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            <div class="form-group pmd-textfield col-md-12 nos">
                <div class="cmn-qa-box">
                    @Html.LabelFor(model => model.Question, htmlAttributes: new { @class = "" })
                    <textarea type="text" name="Question" class="form-control">@dr.ItemArray[1]</textarea>
                        @*<input type="text" value="@dr["Question"]" namse="Question" />*@
                </div>
            </div>
            @Html.HiddenFor(m => m.Id)
            <div class="form-group pmd-textfield col-md-12 nos">
                <div class="cmn-qa-box">
                    @Html.LabelFor(model => model.Answer, htmlAttributes: new { @class = "" })
                    <textarea type="text" name="Answer" class="form-control">@dr.ItemArray[2]</textarea>
                        @* <input type="text" value="@dr["Answer"]" name="Answer" />*@
                </div>
            </div>
            <div class="form-group" style="margin-bottom: 0">
                <div class="add-to-ie">
                    <input type="submit" value="Update" />
                </div>
            </div>

        </div>
    </div>
        }

        }

    </div>

</body>
</html>
