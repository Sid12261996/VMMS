                    buttons: ['copyHtml5',
        {
            extend: 'excelHtml5',
            title: 'Attendance Report'
        },

        {
            extend: 'colvis',
            columns: ':not(:first-child)',
        }
                    ]

                });
            });
        }


        function LoadCity() {


            var url = '@Url.Action("LoadCity", "VMMAssign")';

            $.getJSON(url, function (result) {
                var data = result;
                $("#ddlCity").empty();
                $("#ddlCity").append('<option selected="selected"  ></option>');
